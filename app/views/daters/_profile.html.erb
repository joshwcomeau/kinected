<section class="modal--show message-modal" id="message-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
  <%= form_for @message do |m| %>
    <div class="modal-inner">
      <header id="modal-label"><h3>Send a Message</h3></header>
      <div class="modal-content">
        <%= m.text_area :body, placeholder: 'Send this user a message', "ng-model" => "profile.message.input", maxlength: 200 %>
      </div>
      <footer>
        <div class="character-count">{{200-profile.message.input.length}}</div>
        <%= m.hidden_field :user_id, value: current_user.id %>
        <%= m.hidden_field :recipient_id, value: "{{user.profile.id}}" %>
        <%= m.submit "Send" %>
      </footer>
    </div>

    <a href="#!" class="modal-close" title="Return to Profile" data-close="Close" data-dismiss="modal">?</a>
  <% end %>
</section>

<!-- Image Modal -->
<section class="modal--show image-modal" id="image-modal" tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
  <div class="modal-inner">
    <div class="modal-content">
      <img ng-src="{{user.selectedPhoto.photo_object.url}}" alt="">
      <p class="selected-photo-caption">{{user.selectedPhoto.caption}}</p>
    </div>
  </div>

  <a href="#!" class="modal-close" title="Return to Profile" data-close="Close" data-dismiss="modal">?</a>
</section>

