<header class="bg-teal">
  <div class="onboard-wrapper">
    <h1>Welcome Aboard!</h1>
    <h3>
      <strong>Congrats!</strong> We've determined that you're an ideal candidate for Kinected.
    </h3>
  </div>
</header>

<div class="onboard-wrapper">
  <p class="registration-paragraph">You can register for an account below, we just need some basic information from you. More introductory text goes here, talking about maybe the fee involved, or the perks of signing up?</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <h4 class="form-section-heading" data-number="1">Basic Information</h4>
    
    <fieldset>
      <div class="form-row">
        <div class="form-label"><%= f.label :first_name, "Your Name" %></div>
        <div class="form-input"><%= f.text_field :first_name, autofocus: true, placeholder: 'First Name', class: 'half-width-first' %><%= f.text_field :last_name, placeholder: 'Last Name', class: 'half-width' %></div> 
      </div>

      <div class="form-row">
        <div class="form-label">Your Gender</div>
        <div class="form-input">
          <%= f.radio_button :sex, "male" %><%= f.label :sex_male, "Male" %>
          <%= f.radio_button :sex, "female" %><%= f.label :sex_female, "Female" %>
        </div> 
      </div>

      <div class="form-row">
        <div class="form-label"><%= f.label :birthdate, "Date of Birth" %></div>
        <div class="form-input"><%= f.date_field :birthdate, class: 'full-width' %></div>
      </div>

      <div class="form-row">
        <%= collection_check_boxes(:user, :ethnicity_ids, Ethnicity.all, :id, :name) %>
      </div>

      <div><%= f.submit "Sign up" %></div>
    </fieldset>

    <h4 class="form-section-heading" data-number="3">Account Information</h4>
    
    <fieldset>
      <div class="form-row">
        <div class="form-label"><%= f.label :email %></div>
        <div class="form-input"><%= f.email_field :email, class: 'full-width' %></div>
      </div>

      <div class="form-row">
        <div class="form-label"><%= f.label :password %></div>
        <div class="form-input"><%= f.password_field :password, autocomplete: "off", class: 'full-width' %></div>
      </div>

      <div class="form-row">
        <div class="form-label"><%= f.label :password_confirmation, "Confirm Password" %></div>
        <div class="form-input"><%= f.password_field :password_confirmation, autocomplete: "off", class: 'full-width' %></div>
      </div>

    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
