<div class="teal-stripe"></div>
<div class="very-narrow-wrapper login-wrapper">
  <h2 class="no-top-margin">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
    <%= f.email_field :email, autofocus: true, placeholder: 'Your Email Address' %></div>

    <div>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Your Password' %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Log in" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<%= render partial: 'layouts/logged_out_footer' %>
